<div class="col-lg-3 col-md-4 col-xs-12 thumb img gallery">
	<h3><%= link_to  gallery.name, gallery_path(gallery) %></h3>
	<% if gallery.photos.length > 0 %>
	<!--<%= link_to image_tag(gallery.photos.first.image_url(:thumb).to_s), gallery_path(gallery) %>-->
	<%= link_to image_tag(random_gallery_cover(gallery)), gallery_path(gallery) %>
	<% end %>
	<%= link_to "Delete", gallery_path(gallery), method: :delete, data: { confirm: 'Are you sure?' } if current_user %>
</div> 